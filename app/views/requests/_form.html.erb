<%= form_for(@request) do |f| %>
  <% if @request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@request.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
      <% @request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.hidden_field :user_id %>
  <table  class="display table table-striped table-bordered" cellspacing="0" width="100%">    
    <tbody>
    <tr>
      <td><%= f.label :boots %></td>
      <td><%= f.check_box :boots %></td>
    </tr>
    
    <tr>
      <td><%= f.label :sneakers %></td>
      <td><%= f.check_box :sneakers %></td>
    </tr>  
    
    <tr>
      <td><%= f.label :polo %></td>
      <td><%= f.check_box :polo %></td>
    </tr>
    
    <tr>
      <td><%= f.label :backpack %></td>
      <td><%= f.check_box :backpack %></td>
    </tr>
    
    <tr>
      <td>Duffel</td>
      <td><%= f.check_box :duffel, class:"cmn-toggle cmn-toggle-yes-no", id: "cmn-toggle-9" %>
      <label for="cmn-toggle-9" data-on="Yes!" data-off="No"></label>
      </td>
    </tr>
    <tr>
      <td><%= f.label :comments %></td>
      <td><%= f.text_field :comments, size: 30 %></td>
    </tr>
  </tbody>
  </table>
  
 
  
    

  <div class="actions">
    <%= f.submit %>
  </div>
  
  
<% end %>
